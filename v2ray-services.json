{
    "containerDefinitions": [
        {
            "command": [
                "v2ray",
                "--config=/etc/v2ray/config.json"
            ],
            "essential": true,
            "image": "v2fly/v2fly-core",
            "mountPoints": [
                {
                    "containerPath": "/etc/v2ray/config.json",
                    "sourceVolume": "${Pwd}V2Ray-Server_Json"
                }
            ],
            "name": "v2ray"
        }
    ],
    "family": "v2ray",
    "volumes": [
        {
            "host": {
                "sourcePath": "${PWD}/Caddyfile"
            },
            "name": "${Pwd}Caddyfile"
        },
        {
            "host": {
                "sourcePath": "caddy_data"
            },
            "name": "Caddy_Data"
        },
        {
            "host": {
                "sourcePath": "caddy_config"
            },
            "name": "Caddy_Config"
        },
        {
            "host": {
                "sourcePath": "${PWD}/v2ray-server.json"
            },
            "name": "V2Ray-Server_Json"
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "executionRoleArn": "arn:aws:iam::968220290494:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "memory": "2 GB",
    "cpu": "1 vCPU"
}
